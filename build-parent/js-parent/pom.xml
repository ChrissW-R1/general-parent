<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>me.chrisswr1</groupId>
		<artifactId>build-parent</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>js-parent</artifactId>
	<packaging>pom</packaging>

	<name>JavaScript Parent</name>
	<description>
		Defines the basic process to build JavaScript artifacts for npm.
	</description>

	<properties>
		<project.module-root.basedir>${project.parent.basedir}/../</project.module-root.basedir>

		<nodejs.version>10.6.0</nodejs.version>
		<yarn.version>1.7.0</yarn.version>
		<npm-typescript.version>2.9.2</npm-typescript.version>
		<tslint.version>5.10.0</tslint.version>
		<codelyzer.version>4.4.2</codelyzer.version>
		<rxjs.version>6.2.1</rxjs.version>
		<zonejs.version>0.8.26</zonejs.version>
		<angular.version>6.0.8</angular.version>
		<grunt.version>1.0.3</grunt.version>
		<grunt-cli.version>1.2.0</grunt-cli.version>
		<grunt-tslint.version>5.0.2</grunt-tslint.version>
		<grunt-ts.version>5.5.1</grunt-ts.version>
		<uglify.version>3.3.0</uglify.version>

		<plugin.frontend.version>1.6</plugin.frontend.version>
	</properties>

	<build>
		<sourceDirectory>src/main/ts</sourceDirectory>
		<testSourceDirectory>src/test/ts</testSourceDirectory>
		<outputDirectory>${project.build.directory}/dist</outputDirectory>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>${project.build.directory}/generated-resources</directory>
				<includes>
					<include>project.properties</include>
				</includes>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>${project.basedir}</directory>
				<includes>
					<include>README.md</include>
				</includes>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.portals.jetspeed-2</groupId>
					<artifactId>jetspeed-unpack-maven-plugin</artifactId>
					<executions>
						<execution>
							<id>unpack-js-project-files</id>
							<phase>initialize</phase>
							<goals>
								<goal>unpack</goal>
							</goals>
							<configuration>
								<unpack>
									<artifact>me.chrisswr1:general-resources:jar</artifact>
									<targetDirectory>${project.basedir}</targetDirectory>
									<resources>
										<resource>
											<path>resources</path>
											<include>tslint.json</include>
											<overwrite>true</overwrite>
											<flat>true</flat>
										</resource>
									</resources>
								</unpack>
							</configuration>
						</execution>
						<execution>
							<id>unpack-unfiltered-js-project-files</id>
							<phase>initialize</phase>
							<goals>
								<goal>unpack</goal>
							</goals>
							<configuration>
								<unpack>
									<artifact>me.chrisswr1:general-resources:jar</artifact>
									<targetDirectory>${project.build.directory}/generated-resources</targetDirectory>
									<resources>
										<resource>
											<path>unfiltered-resources</path>
											<include>tsconfig.json</include>
											<flat>true</flat>
										</resource>
									</resources>
								</unpack>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-resources-plugin</artifactId>
					<executions>
						<execution>
							<id>generate-js-project-files</id>
							<phase>generate-sources</phase>
							<goals>
								<goal>copy-resources</goal>
							</goals>
							<configuration>
								<resources>
									<resource>
										<directory>${project.build.directory}/generated-resources</directory>
										<includes>
											<include>tsconfig.json</include>
										</includes>
										<filtering>true</filtering>
									</resource>
									<resource>
										<directory>src/main/node</directory>
										<includes>
											<include>package.json</include>
											<include>Gruntfile.js</include>
										</includes>
										<filtering>true</filtering>
									</resource>
								</resources>
								<outputDirectory>${project.basedir}</outputDirectory>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>com.github.eirslett</groupId>
					<artifactId>frontend-maven-plugin</artifactId>
					<version>${plugin.frontend.version}</version>
					<configuration>
						<installDirectory>build-exe</installDirectory>
						<nodeVersion>v${nodejs.version}</nodeVersion>
						<yarnVersion>v${yarn.version}</yarnVersion>
					</configuration>
					<executions>
						<execution>
							<id>install-nodejs</id>
							<goals>
								<goal>install-node-and-yarn</goal>
							</goals>
						</execution>
						<execution>
							<id>yarn-install</id>
							<goals>
								<goal>yarn</goal>
							</goals>
						</execution>
						<execution>
							<id>grunt-build</id>
							<goals>
								<goal>grunt</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
