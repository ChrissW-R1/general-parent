<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>me.chrisswr1</groupId>
		<artifactId>general-parent</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>build-parent</artifactId>
	<packaging>pom</packaging>

	<name>Build Parent</name>
	<description>
		This project defines build steps for all artifact-producing projects.
	</description>

	<properties>
		<project.parent.basedir>${project.basedir}/../</project.parent.basedir>

		<plugin.unpack.version>2.3.1</plugin.unpack.version>
	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>${project.build.directory}/generated-resources</directory>
				<includes>
					<include>project.properties</include>
				</includes>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>${project.basedir}</directory>
				<includes>
					<include>README.md</include>
				</includes>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.portals.jetspeed-2</groupId>
					<artifactId>jetspeed-unpack-maven-plugin</artifactId>
					<version>${plugin.unpack.version}</version>
					<dependencies>
						<dependency>
							<groupId>${project.groupId}</groupId>
							<artifactId>general-resources</artifactId>
							<version>${project.version}</version>
						</dependency>
					</dependencies>
					<executions>
						<execution>
							<id>unpack-common-project-files</id>
							<phase>initialize</phase>
							<goals>
								<goal>unpack</goal>
							</goals>
							<configuration>
								<unpack>
									<artifact>${project.groupId}:general-resources:jar</artifact>
									<targetDirectory>${project.module-root.basedir}</targetDirectory>
									<resources>
										<resource>
											<path>resources</path>
											<include>.gitignore,.editorconfig</include>
											<overwrite>true</overwrite>
											<flat>true</flat>
										</resource>
									</resources>
								</unpack>
							</configuration>
						</execution>
						<execution>
							<id>unpack-common-resources</id>
							<phase>generate-resources</phase>
							<goals>
								<goal>unpack</goal>
							</goals>
							<configuration>
								<unpack>
									<artifact>${project.groupId}:general-resources:jar</artifact>
									<targetDirectory>${project.build.directory}/generated-resources</targetDirectory>
									<resources>
										<resource>
											<path>unfiltered-resources</path>
											<include>project.properties</include>
											<flat>true</flat>
										</resource>
									</resources>
								</unpack>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.portals.jetspeed-2</groupId>
				<artifactId>jetspeed-unpack-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>java-parent</module>
		<module>js-parent</module>
	</modules>
</project>
